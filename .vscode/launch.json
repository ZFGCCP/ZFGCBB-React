{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Dev Server: Local Environment",
      "type": "node",
      "request": "launch",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "runtimeExecutable": "corepack",
      "runtimeArgs": ["yarn", "dev", "--strictPort"],
      "cascadeTerminateToConfigurations": [
        "Browser Debug",
        "Dev Server: Local Environment"
      ],
      // "serverReadyAction": {
      //   "pattern": "Local:\\s+http://localhost:(\\d+)/",
      //   "action": "debugWithChrome",
      //   "uriFormat": "http://localhost:%s",
      //   "webRoot": "${workspaceFolder}"
      // },
      "smartStep": true,
      "autoAttachChildProcesses": true,
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**",
        "**/.yarn/**",
        "**/.pnpm-store/**"
      ],
      "presentation": {
        "hidden": true,
        "group": "dev-server"
      }
    },
    {
      "name": "Dev Server: Live Environment",
      "type": "node",
      "request": "launch",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "runtimeExecutable": "corepack",
      "runtimeArgs": ["yarn", "dev", "--mode=production", "--strictPort"],
      "cascadeTerminateToConfigurations": [
        "Browser Debug",
        "Dev Server: Live Environment"
      ],
      // "serverReadyAction": {
      //   "pattern": "Local:\\s+http://localhost:(\\d+)/",
      //   "action": "debugWithChrome",
      //   "uriFormat": "http://localhost:%s",
      //   "webRoot": "${workspaceFolder}"
      // },
      "smartStep": true,
      "autoAttachChildProcesses": true,
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**",
        "**/.yarn/**",
        "**/.pnpm-store/**"
      ],
      "presentation": {
        "hidden": true,
        "group": "dev-server"
      }
    },

    {
      "name": "Preview Server",
      "type": "node",
      "request": "launch",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "runtimeExecutable": "corepack",
      "runtimeArgs": ["yarn", "preview", "--strictPort"],
      "preLaunchTask": "yarn build",
      "cascadeTerminateToConfigurations": ["Browser Debug", "Preview Server"],
      "smartStep": true,
      "autoAttachChildProcesses": true,
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**",
        "**/.yarn/**",
        "**/.pnpm-store/**"
      ],
      "presentation": {
        "hidden": true,
        "group": "dev-server"
      }
    },
    {
      "name": "Browser Debug",
      "type": "chrome",
      "request": "launch",
      "webRoot": "${workspaceFolder}",
      "url": "http://localhost:5173",
      "preLaunchTask": "wait-for-server",
      "postDebugTask": "cleanup-server",
      "smartStep": true,
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**",
        "**/.yarn/**",
        "**/.pnpm-store/**"
      ],
      "presentation": {
        "hidden": true,
        "group": "dev-server"
      }
    }
  ],

  "compounds": [
    {
      "name": "Debug zfgc.com (local/dev)",
      "configurations": ["Dev Server: Local Environment", "Browser Debug"],
      "stopAll": true,
      "preLaunchTask": "yarn install"
    },
    {
      "name": "Debug zfgc.com (live/dev)",
      "configurations": ["Dev Server: Live Environment", "Browser Debug"],
      "stopAll": true,
      "preLaunchTask": "yarn install"
    },
    {
      "name": "Debug zfgc.com (local/production)",
      "configurations": ["Preview Server", "Browser Debug"],
      "stopAll": true,
      "preLaunchTask": "yarn install"
    }
  ]
}

  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug zfgc.com (local/dev)",
      "request": "launch",
      "type": "node",
      "cascadeTerminateToConfigurations": ["Browser Debug"],
      "internalConsoleOptions": "neverOpen",
      "console": "integratedTerminal",
      "runtimeExecutable": "corepack",
      "runtimeArgs": ["yarn", "dev", "--mode=production"],
      "preLaunchTask": "yarn install",
      "serverReadyAction": {
        "action": "debugWithChrome",
        "pattern": "Local:\\s+http://localhost:(\\d+)/",
        "uriFormat": "http://localhost:%s",
        "webRoot": "${workspaceFolder}",
        "killOnServerStop": true
      },
      "autoAttachChildProcesses": true,
      "smartStep": true,
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**",
        "**/.yarn/**",
        "**/.pnpm-store/**"
      ]
    },
    {
      "name": "Debug zfgc.com (live/dev)",

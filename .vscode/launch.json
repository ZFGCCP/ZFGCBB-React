  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug with Chrome",
      "request": "launch",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["dev"],
      "type": "node",
      "env": {
        "NO_COLOR": "true"
      },
      "serverReadyAction": {
        "action": "debugWithChrome",
        "pattern": "Local:   http://localhost:([0-9]+)/",
        "uriFormat": "http://localhost:%s"
      }
    }
  ]
}
